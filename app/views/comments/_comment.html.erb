<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><%= comment.name %></strong></p>
		<p class="comment.body"><%= comment.body %></p>
		<p class="comment_title"><em><%= time_ago_in_words(comment.created_at) %></em></p>
	</div>

	<p><%= link_to "Delete", [comment.post, comment], class: "button", method: :delete, data: {confirm: 'Are you sure?'}%></p>
</div>